{
    "add-field-type": [
        {
            "name": "my_text",
            "class": "solr.TextField",
            "indexAnalyzer": {
                "tokenizer": {
                    "class": "solr.StandardTokenizerFactory"
                },
                "filters": [
                    {
                        "class": "solr.ASCIIFoldingFilterFactory",
                        "preserveOriginal": true
                    },
                    {
                        "class": "solr.LowerCaseFilterFactory"
                    },
                    {
                        "class": "solr.EnglishMinimalStemFilterFactory"
                    }, 
                    {
                        "class":"solr.SynonymFilterFactory", 
                        "synonyms": "synonyms.txt", 
                        "ignoreCase":"true", 
                        "expand":"false"
                    }
                ]
            },
            "queryAnalyzer": {
                "tokenizer": {
                    "class": "solr.StandardTokenizerFactory"
                },
                "filters": [
                    {
                        "class": "solr.ASCIIFoldingFilterFactory",
                        "preserveOriginal": true
                    },
                    {
                        "class": "solr.LowerCaseFilterFactory"
                    },
                    {
                        "class": "solr.EnglishMinimalStemFilterFactory"
                    }, 
                    {
                        "class":"solr.SynonymFilterFactory", 
                        "synonyms": "synonyms.txt", 
                        "ignoreCase":"true", 
                        "expand":"false"
                    }
                ]
            }
        },
        {
            "name": "date",
            "class": "solr.TrieDateField",
            "precisionStep": 0,
            "positionIncrementGap": 0
        },
        {
            "name": "float",
            "class": "solr.TrieFloatField",
            "precisionStep": 0,
            "positionIncrementGap": 0
        }
    ],
    "add-field": [
        {
            "name": "url",
            "type": "string",
            "indexed": false
        },
        {
            "name": "season",
            "type": "pint",
            "indexed": true
        },
        {
            "name": "episode",
            "type": "string",
            "indexed": false
        },
        {
            "name": "us_viewers",
            "type": "float",
            "indexed": false
        },
        {
            "name": "running_time",
            "type": "string",
            "indexed": false
        },
        {
            "name": "airdate",
            "type": "date",
            "indexed": true
        },
        {
            "name": "synopsis",
            "type": "my_text",
            "indexed": true
        },
        {
            "name": "animation",
            "type": "my_text",
            "indexed": false,
            "multiValued": true
        },
        {
            "name": "musics",
            "type": "my_text",
            "indexed": false,
            "multiValued": true
        },
        {
            "name": "writers",
            "type": "my_text",
            "indexed": true,
            "multiValued": true
        },
        {
            "name": "title",
            "type": "my_text",
            "indexed": true
        },
        {
            "name": "characters",
            "type": "my_text",
            "indexed": true,
            "multiValued": true
        },
        {
            "name": "transcript",
            "type": "my_text",
            "indexed": true
        }
    ]
}